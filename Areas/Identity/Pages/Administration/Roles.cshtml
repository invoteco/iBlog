@page
@using iBlog.Areas.Identity.Pages.Administration
@model RolesModel
@{
    ViewData["Title"] = "Roles";
    ViewData["ActivePage"] = AdminNavPages.Roles;
}

<table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>All Roles in Application</td>
                <td>Description</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.RoleDescription</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-rolename="@role">
                            @if (role.Name == "Admin")
                            {


                            <button type="submit" disabled="disabled" class="btn btn-warning">Delete</button>
                            }
                            else { 
                            <button type="submit" class="btn btn-warning">Delete</button>                         
                            }
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<hr/>

<div class="col-md-4">
    <form method="post" asp-page-handler="Create">
        <h4>Create a new Role.</h4>
        <div class="form-group">
            <label>New Role Name </label>
            <input type="text" name="rolename" class="form-control" />
        </div>
        <div>
            <label>New Role Description</label>
            <input type="text" name="roledescription" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
<hr />