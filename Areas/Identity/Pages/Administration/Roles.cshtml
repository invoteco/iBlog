@page
@using iBlog.Areas.Identity.Pages.Administration
@model RolesModel
@{
    ViewData["Title"] = "Roles";
    ViewData["ActivePage"] = AdminNavPages.Roles;
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>All Roles in Application</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role</td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-4">
    <form  method="post">
        <h4>Create a new Role.</h4>
        <hr />
        <div class="form-group">
            <label>New Role Name </label>
            <input type="text" name="newrolename" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>